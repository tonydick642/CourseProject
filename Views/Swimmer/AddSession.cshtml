@model IEnumerable<CourseProject.Models.Session>
@{
    if (Model.Count() < 1)
    {
        <p>No lesson in database yet.</p>
    }
    else
    {
        <h3>All Sessions</h3>
        <table border="1">
            <tr>
                <th>Lesson ID</th>
                <th>Seats Available</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Daily Start Time</th>
                <th>Coach Name</th>
                <th>Enroll</th>
            </tr>
            @foreach (var session in Model)
            {
        <tr>
            <td>@session.LessonId</td>
            <td>@session.SeatsAvailable</td>
            <td>@session.StartDate</td>
            <td>@session.EndDate</td>
            <td>@session.DailyStartTime</td>
            <td>@session.Coach.CoachName</td>
            <td><a asp-controller="Swimmer"
                   asp-action="EnrollSession"
                   asp-route-id="@session.SessionId">Enroll</a></td>
        </tr>
            }
        </table>
        }
    }


